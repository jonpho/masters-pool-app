<h1>Golfers</h1>

<div id="golfers">
  <table>
    <thead>
      <tr>
        <th>World Ranking</th>
        <th>Name</th>
        <th>Edits</th>
      </tr>
    </thead>
    <% @golfers.each do |golfer| %>
      <%= render golfer %>
    <% end %>
  </table>
</div>

<%= link_to "New golfer", new_golfer_path %>
